{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,

    "singleQuote": true,
    "lint-staged": {
        "*.+(js|jsx)": ["prettier --write --ignore-unknown"],
        "*.+(json|css|md)": ["prettier --write"]
    },

    "prettier": {
        "singleQuote": true
    },
    "prettier/prettier": [
        "error",
        {
            "endOfLine": "auto"
        }
    ]
}
